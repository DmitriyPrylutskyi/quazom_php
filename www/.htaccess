RewriteEngine on

RewriteCond %{HTTP_HOST} ^www\.(.*) [NC]
RewriteRule ^/?(.*) http://%1/$1 [R=301,L]

RewriteCond %{HTTP_HOST} ^kvazom\.com
RewriteRule ^(.*)$ http://quazom.com/$1 [R=301,L]

RewriteCond %{THE_REQUEST} ^[A-Z]{3,9}\ /.*index\.html?\ HTTP/
RewriteRule ^(.*)index\.html?$ /$1 [R=301,L]

# if a directory or a file exists, use it directly
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# otherwise forward it to index.php
RewriteRule . index.php

# set cache for css files
<ifModule mod_deflate.c>
	AddOutputFilterByType DEFLATE text/html text/css
</ifModule>

<IfModule mod_gzip.c>
	mod_gzip_on         Yes
	mod_gzip_dechunk    Yes
	mod_gzip_item_include file		\.(html?|css|js)$
	mod_gzip_item_include mime		^text\.*
	mod_gzip_item_include mime		^application/x-javascript.*
	mod_gzip_item_exclude rspheader	^Content-Encoding:.*gzip.*
</IfModule>

<ifModule mod_headers.c>
	#кэшировать html и htm файлы на 10 минут
	<FilesMatch "\.(html|htm)$">
		Header set Cache-Control "max-age=600"
	</FilesMatch>
	#кэшировать css, javascript на одну неделю
	<FilesMatch "\.(css|js)$">
		Header set Cache-Control "max-age=604800"
	</FilesMatch>
	#кэшировать на одну неделю
	<FilesMatch ".(gif|jpg|jpeg|png|ico|svg|ttf|woff)$">
	  Header set Cache-Control "max-age=604800"
	</FilesMatch>
</IfModule>

<ifModule mod_expires.c>
	# Add correct content-type for fonts
	AddType application/x-font-ttf .ttf
	AddType application/x-font-woff .woff
	AddType image/svg+xml .svg

	# Compress compressible fonts
	AddOutputFilterByType DEFLATE application/x-font-ttf image/svg+xml

	ExpiresActive On

	#по умолчанию кеш в 5 секунд
	ExpiresDefault "access plus 5 seconds"
	#кэшировать html и htm файлы на 10 минут
	#ExpiresByType text/html "access plus 600 seconds"
	#кэшировать на одну неделю
	ExpiresByType text/css "access plus 604800 seconds"
	ExpiresByType text/javascript "access plus 604800 seconds"
	ExpiresByType application/javascript "access plus 604800 seconds"
	ExpiresByType application/x-javascript "access plus 604800 seconds"
	ExpiresByType image/x-icon "access plus 604800 seconds"
	ExpiresByType image/jpeg "access plus 604800 seconds"
	ExpiresByType image/png "access plus 604800 seconds"
	ExpiresByType image/gif "access plus 604800 seconds"
	ExpiresByType image/svg+xml "access plus 604800 seconds"
	ExpiresByType application/x-font-ttf "access plus 604800 seconds"
	ExpiresByType application/x-font-woff "access plus 604800 seconds"
</ifModule>

ErrorDocument 404 /not_found_page.php